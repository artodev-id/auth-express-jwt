{
  "name": "express-backend",
  "version": "1.0.0",
  "description": "Take Home Test ExpressJS",
  "main": "server.js",
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "start": "npm run prod",
    "build2": "npx typescript-module-alias-build ./src --out-dir dist",
    "build": "npx tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o dist",
    "server": "node dist/server.js",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "clean": "rimraf dist",
    "watch:dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "test": "jest",
    "clear:babel-cache": "rimraf -rf ./node_modules/.cache/@babel/*"
  },
  "keywords": [
    "express",
    "js",
    "jwt",
    "auth"
  ],
  "author": "ekobagas_k",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-boom": "^3.0.0",
    "express-jwt": "^8.4.1",
    "express-validator": "^7.0.1",
    "lodash": "^4.17.21",
    "mysql2": "^3.6.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-boom": "^3.0.1",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.0",
    "@types/validator": "^13.11.1",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
